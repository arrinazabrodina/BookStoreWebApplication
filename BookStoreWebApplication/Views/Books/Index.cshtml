@model IEnumerable<BookStoreWebApplication.Models.Book>

@{
	ViewData["Title"] = "Книги";
}

<h1>Книги</h1>

<p>
	<a asp-action="Create">Додати нову книгу</a>
</p>
<table class="table">
	<thead>
		<tr>
			<th>
				@Html.DisplayNameFor(model => model.Name)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.PublicationYear)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.CoverType)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Price)
			</th>
			<th>
				@Html.DisplayNameFor(m => m.Genres)
			</th>
			<th>
				Дії
			</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr>
				<td>
					@Html.DisplayFor(modelItem => item.Name)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.PublicationYear)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.CoverType)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Price)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Genres)
				</td>
				<td>
					<a asp-action="Details" asp-route-id="@item.Id">Деталі</a> |
					<a asp-action="Edit" asp-route-id="@item.Id">Редагувати</a> |
					<a asp-action="Delete" asp-route-id="@item.Id" class="destructive">Видалити</a>
				</td>
			</tr>
		}
	</tbody>
</table>
