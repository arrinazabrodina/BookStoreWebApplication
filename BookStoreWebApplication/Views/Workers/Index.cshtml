@model IEnumerable<BookStoreWebApplication.Models.Worker>

@{
	ViewData["Title"] = "Працівники";
}

<h1>Працівники</h1>
@if (ViewBag.BookingstoreAddress != null)
{
	<h4>Книгарня @ViewBag.BookingstoreAddress</h4>
}

<p>
	<a asp-action="Create">Додати нового працівника</a>
</p>
<table class="table">
	<thead>
		<tr>
			<th>
				@Html.DisplayNameFor(model => model.Name)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.BirthDate)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Address)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Email)
			</th>
			@if (@ViewBag.NeedsToShowBookstoreAddress != false)
			{
				<th>
					@Html.DisplayNameFor(model => model.Bookstore)
				</th>
			}
			<th>
				Дії
			</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr>
				<td>
					@Html.DisplayFor(modelItem => item.Name)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.BirthDate)
				</td>

				<td>
					@Html.DisplayFor(modelItem => item.Address)
				</td>

				<td>
					@Html.DisplayFor(modelItem => item.Email)
				</td>
				@if (@ViewBag.NeedsToShowBookstoreAddress != false)
				{
					<td>
						@Html.DisplayFor(modelItem => item.Bookstore.FullAddress)
					</td>
				}
				<td>
					<a asp-action="Details" asp-route-id="@item.Id">Деталі</a> |
					<a asp-action="Edit" asp-route-id="@item.Id">Редагувати</a> |
					<a asp-action="Delete" asp-route-id="@item.Id" class="destructive">Видалити</a>
				</td>
			</tr>
		}
	</tbody>
</table>
