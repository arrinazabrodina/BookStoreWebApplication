@model IEnumerable<BookStoreWebApplication.Models.Author>

@{
	ViewData["Title"] = "Автори";
}

<h1>Автори</h1>

<p>
	<a asp-action="Create">Додати нового автора</a>
</p>
<table class="table">
	<thead>
		<tr>
			<th>
				@Html.DisplayNameFor(model => model.Name)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.BirthDate)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Genres)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.ShortBiography)
			</th>
			<th>
				Дії
			</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr>
				<td>
					@Html.DisplayFor(modelItem => item.Name)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.BirthDate)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Genres)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.ShortBiography)
				</td>
				<td>

					<a asp-action="Details" asp-route-id="@item.Id">Деталі</a> |
					<a asp-action="Edit" asp-route-id="@item.Id">Редагувати</a> |
					<a asp-action="Delete" asp-route-id="@item.Id" class="destructive">Видалити</a>
				</td>
			</tr>
		}
	</tbody>
</table>
