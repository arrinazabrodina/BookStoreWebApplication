@model BookStoreWebApplication.Models.Bookstore

@{
    ViewData["Title"] = $"Деталі {Model.FullAddress}";
}

<h1>Деталі</h1>

<div>
    <h4>Книгарня @Html.DisplayFor(model => model.FullAddress)</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.City)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.City)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Address)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Address)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Редагувати</a> |
    <a asp-action="Index">Повернутись до книгарень</a>
</div>
<div>
    <a asp-action="ShowAllWorkers" asp-route-id="@Model?.Id">Показати працівників магазину</a>
    <br />
    <a asp-action="Index">Показати замовлення</a>
</div>
